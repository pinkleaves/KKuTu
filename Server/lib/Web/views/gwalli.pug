extends layout

block Subject
	title *** JJO.KR 관리 페이지 ***

block JS
	script(type="text/javascript", src="/js/in_admin.min.js")
	
block Middle
	fieldset
		legend 자격
		input#db-password(type='password', placeholder='암호')
		select#db-lang(style="width: 159px;")
			option(value='' disabled)= '언어를 선택해 주세요.'
			option(value='ko' selected)= '한국어'
			option(value='en')= '영어'
	//-fieldset
		legend 추가 요청 받기
		div
			button#injeong-go 조회
			div
				table
					thead: tr
						td 승인?
						td 링크
						td #
						td theme
						td writer
						td createdAt
					tbody#injeong-data
			button#injeong-everything 모두 승인
			button#injeong-nothing 모두 거절
			button#injeong-apply 적용
	fieldset
		legend 상점 DB 다루기
		div
			input#shop-word(placeholder='품목 (~ALL)')
			button#shop-go 조회
			button#shop-hide 숨기기
			div
				table
					thead: tr
						td #
						td cost
						td evtCost
						td reqlvl
						td isEvent
						td hit
						td term
						td group
						td updatedAt
						td options
						td name_ko_KR
						td desc_ko_KR
						td name_en_US
						td desc_en_US
					tbody#shop-data
			button#shop-add 추가
			button#shop-apply 적용
	fieldset
		legend 기간밴 설정
		div
			input#viewd(placeholder='기간 입력')
			button#viws 조회
			input#viewa(placeholder='기간')
	fieldset
		legend 유저 DB 다루기
		div
			input#user-id(placeholder='ID')
			input#user-nick(placeholder='닉네임')
			button#user-go 조회
			div
				table
					thead: tr
						td #
						td money
						td kkutu
						td box
						td equip
						td exordial
						td server
						td lastLogin
						td black
						td friends
						td nickname
						td lastaccess
						td blackt
						td enhance
					tbody#user-data
			button#user-apply 적용
	fieldset
		legend 유저 감시하기
		div
			input#gamsi-id(placeholder='ID (,로 구분)')
			button#gamsi-go 감시
			div
				table
					thead: tr
						td #
						td 닉네임
						td 서버
					tbody#gamsi-data
	fieldset
		legend 끄투 DB 다루기
		div
			input#db-word(placeholder='단어')
			button#db-go 조회
			div#word-data
				div#wd-id
				input#wd-flag
				table
					thead: tr
						td #
						td type
						td theme
						td mean
						td 행동
					tbody#wd-data
			div#word-flag
			div#word-hit
			button#word-add 추가
			button#db-apply 적용
	fieldset
		legend 끄투 DB에 단어 추가하기
		div.dialog-bar
			//input#db-theme(placeholder='주제 (~부터 적으면 검색)')
			select#db-theme(style="width: 159px;")
				option(value='' disabled selected)= '주제 선택'
			input(type='checkbox' id='db-search' style='margin-left: 10px; margin-top: 3px; width: 15px;')
			label(for='db-search')= '검색'
		textarea#db-list(rows=20, cols=100)
		button#db-ok 확인
	fieldset
		legend 노인정 단어 추가하기
		div.dialog-bar
			select#nodb-theme(style="width: 159px;")
				option(value='' disabled selected)= '주제 선택'
			//input#nodb-flag(type='number', min=0, max=32, step=1, placeholder='FLAG', style='width: 159px')
			select#nodb-flag(style="width: 159px;")
				option(value='' disabled selected)= 'FLAG'
			select#nodb-pum(style="width: 159px;")
				option(value='' disabled selected)= '품사'
			input(type='checkbox' id='nodb-search' style='margin-left: 10px; margin-top: 3px; width: 15px;')
			label(for='nodb-search')= '검색'
			//input#nodb-theme(placeholder='주제 (~부터 적으면 검색)')
		textarea#nodb-list(rows=20, cols=100)
		button#nodb-ok 확인
	fieldset
		legend 끄투에서의 인기 단어
		button#kpw-query 조회
		textarea#kpw-html(rows=20, cols=100)
		div#kpw-table
		button#kpw-flush 반영
	fieldset
		legend 제재 내역 POST
		input#jeje-id(placeholder='제재 사용자 ID')
		input#jeje-reason(placeholder='제재 사유')
		input#jeje-date(placeholder='제재 기간')
		button#jeje-send 전송
