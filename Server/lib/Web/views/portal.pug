extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='https://cdn.jsdelivr.net/gh/pink-flower/pink-kkutu@latest/img/kkutu/short_logo.png')
		div#menu-bar(style='float: right; margin-top: 25px;')
			a(target='_blank', href='//www.youtube.com/channel/UCWlIIGqrvowwOdIA-YxPECw', style='background-color: #FF0000;')= L('youtube')
			a(target='_blank', href='//discord.gg/vpXyhgc', style='background-color: #7289DA;')= L('DISCORD')
		div.jjoriping(style='margin-top: 40px;')
			img.jjoObj.jjoEyeL(src='https://cdn.jsdelivr.net/gh/pink-flower/pink-kkutu@latest/img/jjoeyeL.png', style='left: -270px;')
			img.jjoObj.jjoNose(src='https://cdn.jsdelivr.net/gh/pink-flower/pink-kkutu@latest/img/jjonose.png', style='left: -170px;')
			img.jjoObj.jjoEyeR(src='https://cdn.jsdelivr.net/gh/pink-flower/pink-kkutu@latest/img/jjoeyeR.png', style='left: -70px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: right; margin-top: -120px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+Product('AD')
		script(async='' src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		// KKuTuPw_PC
		ins.adsbygoogle(style='display:inline-block;width:728px;height:90px;margin-left:130px;' data-ad-client='ca-pub-2846342638306553' data-ad-slot='5918352573')
		script.
			(adsbygoogle = window.adsbygoogle || []).push({});
	+separator(10)

block Bottom
	div.bottom-legal!= L('CCL')
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')